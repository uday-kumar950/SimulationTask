<p style="color: green"><%= notice %></p>

<h1>Teams</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Employees Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.full_name %></td>
        <td><%=  team.employees.pluck(:emp_name)%></td>
        <td> <%= link_to "Show this team", team %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "New team", new_team_path %>